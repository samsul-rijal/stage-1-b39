<html>
  <head>
    <title>Creating Blog Page</title>
    <link rel="stylesheet" href="/assets/css/blog.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  </head>
  <body>
    <!-- NavBar -->
    <nav>
      <div class="left-side">
        <a href="/">
          <img src="/assets/images/logo.png" alt="logo" />
        </a>
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/blog" class="list-active">Blog</a>
          </li>
        </ul>
      </div>
      <div class="right-side">
        <a href="/contact"> Contact Me </a>
      </div>
    </nav>
    
    <!-- Blog -->
    <!-- Form -->
    {{!-- {{#if isLogin}}
      <h1>Selamat anda login</h1>
    {{else}}
      <h1>Harap login dulu</h1>
    {{/if}} --}}

    <div class="blog">
      
      {{#if isLogin}}
        <div style="text-align: right; margin-right: 150px; margin-top:50px">
          <a href="/add-blog" style="background-color: orangered; padding: 8px 20px; color:white; border-radius: 5px; text-decoration: none">Add Blog</a>
        </div>
      {{/if}}

      <div id="contents" class="blog-list">
        <!-- dynamic content would be here -->
        {{#each dataBlog}}
          <div class="blog-list-item">
            <div class="blog-image">
              <img src="/assets/images/blog-img.png" alt="" />
            </div>
            <div class="blog-content">
              {{#if isLogin}}
              <div class="btn-group">
                <a href="/edit-blog/{{@index}}" class="btn-edit">Edit Post</a>
                <a href="/delete-blog/{{@index}}" class="btn-post">Delete Blog</a>
              </div>
              {{/if}}
              <h1>
                <a href="/blog-detail/{{@index}}" target="_blank"
                  >{{this.title}}</a
                >
              </h1>
              <div class="detail-blog-content">
                {{this.post_at}} | {{this.author}}
              </div>

              <p>
                {{this.content}}
              </p>

              {{#each social_media}}
                <i class="fa-brands fa-{{this}}"></i>
              {{/each}}
              <div style="text-align: right; margin-top: 15px">
                <span style="font-size: 12px; color:grey">{{this.duration}}</span>
              </div>

            </div>
          </div>
        {{/each}}
        

      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

    <script src="blog.js"></script>
  </body>
</html>
